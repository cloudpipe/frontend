<form class="form-signin">
  <h2 class="form-signin-heading">Sign in</h2>
  <label for="email" class="sr-only">Email address</label>
  {{input
    value=accountName
    type="email" id="email" class="form-control" placeholder="me@provider.com"
    required="true" autofocus="true"}}
  <label for="password" class="sr-only">Password</label>
  {{input
    value=password
    type="password" id="password" class="form-control" placeholder="password"
    required="true"}}
  <div class="checkbox">
    <label>
      {{input type="checkbox" checked=rememberMe}} Remember me
    </label>
  </div>
  <button {{action 'login'}} class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>
